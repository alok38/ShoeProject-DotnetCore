@using ShoeMartMVC.ViewModel
@using ShoeMartMVC.Models
@model ShoeRecords
@{
    ViewBag.Title = "GetAll";
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <h2>Hello,@Model.CustomerName</h2>
<div>
       <table class="table table-dark table-striped">
        @foreach (Shoe item in Model.shoes)
        {
            <tr>
                <td><img src="@item.ShoeImage" height="120" width="120"/></td>
                <td>@item.ShoeName <br /><br /><br /><br/>

                    @*<form action="/Cart/AddToOrder/@item.ShoeId" method="post">
                        <button type="submit" class="btn btn-success" value="submit">AddToCart</button>
                    </form>*@
@*                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddToOrder", "Cart",item.ShoeId)'">AddToCart</button>
*@               @* <a href="/Cart/AddToOrder/@item.ShoeId">AddToCart</a>*@
                    @* <button type="button" class="btn btn-success">Reviews</button>*@

                      @Html.ActionLink(
                      "SeeReviews", 
                      "GetAllReviewsOfShoe",                         
                      "Review",       
                      new { item.ShoeId },         
                      new { @class = "btn btn-success" })
                     
                     @Html.ActionLink(
                      "AddToCart", 
                      "AddToOrder",                         
                      "Cart",       
                      new { item.ShoeId },         
                      new { @class = "btn btn-success" }) 
                </td>
                <td>
                    Price: @item.Price
                </td>
                <td>Size: @item.Size</td>
                <td>Brand: @item.Brand</td>

            </tr>
        }
    </table>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>