@using ShoeMartMVC.ViewModel
@using ShoeMartMVC.Models
@model ShoeRecords
@{
    ViewBag.Title = "AdminGetAllShoes";
}
@{
    Layout = null;
}
    
 <html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<div>
       <table class="table-success">
        @foreach (Shoe item in Model.shoes)
        {
            <tr>
                <td>ShoeId</td>
                <td>ShoeImage</td>
                <td>ShoeName</td>
                <td>Brand</td>
                <td>Price</td>
                <td>Size</td>
            </tr>
            <tr>
                <td>@item.ShoeId</td>
                <td><img src="@item.ShoeImage" height="120" width="120">
                </td>
                <td>
                    @item.ShoeName
                </td>
                <td>@item.Brand</td>
                <td>@item.Price</td>
                <td>@item.Size</td>
            </tr>
        }
    </table>
     <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AdminShoesView", "Admin")'">GoBack</button>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>