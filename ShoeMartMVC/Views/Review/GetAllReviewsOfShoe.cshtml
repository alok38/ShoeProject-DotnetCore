@using ShoeMartMVC.ViewModel
@using ShoeMartMVC.Models
@model ReviewRecords
@{
    ViewBag.Title = "GetAllReviewsOfShoe";
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<h2>Reviews</h2>


<div>
       <table class="table">
        @foreach (Review item in Model.Reviews)
        {
            <tr>
                <td>CustomerName: @item.CustomerName</td>
                <td>Rating: @item.Rating <br />
                </td>
                <td>
                   CustomerFeedback: @item.Feedback
                </td>
                <td>ReviewDate: @item.ReviewTime</td>


            </tr>
        }
    </table>
        <form action="/Review/AddReview/" method="post">
         Rating: <input type="text" name="Rating" value=""/>
         Feedback: <input type="text" name="Feedback" value=""/> 
         @*ShoeId: <input type="text" name="ShoeId" value=""/>*@
         <button type="submit" class="btn btn-success" value="submit">AddReview</button>
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("GetAll", "HomePage")'">Home</button>
        </form>

   
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>