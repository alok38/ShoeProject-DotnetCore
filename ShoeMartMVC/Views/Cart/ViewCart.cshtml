@using ShoeMartMVC.ViewModel
@using ShoeMartMVC.Models
@model ShoeRecords
@{
    ViewBag.Title = "ViewCart";
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<div>
       <table class="table table-dark table-striped">
        @foreach (Shoe item in Model.shoes)
        {
            <tr>
                <td><img src="@item.ShoeImage" height="120" width="120"/></td>
                <td>@item.ShoeName <br /><br /><br /><br/>
                </td>
                <td>
                    Price: @item.Price
                </td>
                <td>Size: @item.Size</td>
                <td>Brand: @item.Brand</td>

            </tr>
        }
    </table>
    <label>Total Price For All The Shoes is: @Model.Total</label>
   
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("BuyNow", "Cart")'">BuyNow</button>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>